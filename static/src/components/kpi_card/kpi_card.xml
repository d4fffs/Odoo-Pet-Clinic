<templates xml:space="preserve">
  <t t-name="owl.KpiCard" owl="1">
    <div t-on-click="onCardClick" class="kpi-cont w-100 h-100 d-flex flex-column justify-content-between bg-white shadow-sm p-4 rounded">
      <div class="d-flex flex-row align-items-center justify-content-between w-100">
        <div class="d-flex flex-column justify-content-center text-dark">
          <h3 class="text-dark font-poppins-bold mb-2"><t t-esc="props.value" /></h3>
          <h5 class="text-muted font-poppins"><t t-esc="props.title" /></h5>
        </div>
        <img class="kpi-img-elegant ms-4" t-att-src="props.img" alt="Icon" />
      </div>
    </div>
  </t>
</templates>
