<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.ChartRenderer" owl="1">
        <div class="o_chart_box card shadow-sm p-3">
            <h2 class="fs-4 fw-semibold text-center text-primary mb-3">
                <t t-esc="props.title" />
            </h2>
            <div class="o_chart_container" style="position: relative; width: 100%; height: 300px;">
                <canvas t-ref="graph" class="o_chart_canvas" style="width: 100%; height: 100%;" />
            </div>
        </div>
    </t>
</templates>
